    <title>Login Page</title>
</head>
<body>
    <form action="/Blog%20Doors/login%20form" method="post" name="form1">
        <h2>login to blog doors</h2>
        <% if (check==true) {%>
            <input type="email" name="email" id="" placeholder="Email" style="border: 2px solid #865DFF;">
            <input type="password" name="password" id="passLogin" placeholder="Password" style="border: 2px solid #865DFF;">
            <input type="submit" value="login">
        <%}else{%>
            <input type="email" name="email" id="" placeholder="Email" style="border: 2px solid red;">
            <input type="password" name="password" id="passLogin" placeholder="Password" style="border: 2px solid red;">
            <input type="submit" value="login">
            <%}%>
    </form>
    
